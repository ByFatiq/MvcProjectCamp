@using EntityLayer.Concrete
@model List<Content>


<section class="content">
      <div class="container-fluid">

        <!-- Timelime example  -->
        <div class="row">
          <div class="col-md-12">
            <!-- The time line -->
            <div class="timeline">


                @foreach (var item in Model)
                {
                <!-- timeline time label -->

                <div class="time-label">
                    <span class="bg-red">@item.ContentDate.ToShortDateString()</span>
                </div>
                    <div>
                        <i class="fas fa-envelope bg-blue"></i>
                        <div class="timeline-item">
                            <span class="time"><i class="fas fa-clock"></i> @item.ContentDate.ToShortTimeString()</span>
                            <h3 class="timeline-header"><a href="#">@item.Headings.HeadingName</a></h3>

                            <div class="timeline-body">
                                @item.ContentText
                            </div>
                            <div class="timeline-footer">
                                <a class="btn btn-primary btn-sm">Başlığa ait tüm yorumları</a>
                                <a class="btn btn-danger btn-sm">Sil</a>
                            </div>
                        </div>
                    </div>
                    
                }

