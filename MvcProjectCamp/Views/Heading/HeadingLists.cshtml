@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "HeadingList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html>
<div class="card card-solid" style="margin: auto; width: 90%; ">
    <div>  <br /> <h2 class="card bg-gradient-info" style="margin: auto; text-align: center; width: 300px;">Başlık Listesi </h2>  <br />  <br /></div>



    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Açıklama</th>
                <th style="text-align: center; ">Sil</th>
                <th style="text-align: center; ">Güncelle</th>
                <th style="text-align: center; ">Başlıklar</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
            <tr>
                <th>@item.HeadingId</th>
                <td>@item.HeadingName</td>
                <td>@item.HeadingDate</td>
                <td style="text-align: center; "><a href="/AdminCategory/DeleteCategory/@item.HeadingId" class="btn btn-danger">Sil</a></td>
                <td style="text-align: center; "><a href="/AdminCategory/UpdateCategory/@item.HeadingId" class="btn btn-success">Güncelle</a></td>
                <td style="text-align: center; "><a href="#" class="btn btn-info">Başlıklar</a></td>
            </tr>
            </tr>
        }
    </table>

    <div style="text-align: center;">
        <a href="/Heading/AddHeading" class="btn btn-primary">Yeni Başlık Ekle</a>

        <br />
        <br />
    </div>


</div>
</html>