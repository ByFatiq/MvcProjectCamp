
@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "HeadingList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string genderResult = "AdminLTELogo.png";}
@{ string badgeResults = "badge badge-success";}
@{ string headingStatusClassResults = "pasive-border";}
@{ string headingStatusClassResultsNand = "btn btn-secondary";}
@{ string statusResult = "Belirsiz";}
@{ string statusResultNand = "Belirsiz";}




<div class="wrapper">

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title" style="font-weight:bold">Başlık İşlemleri</h3>


                <div class="card-tools">
                    <a href="~/Headings/AddHeading" class="btn btn-app" style="text-align: right; display: ruby; padding: 5px; vertical-align: baseline;">
                        <i class="fas fa-plus" style="position: relative;top: 3px"></i>  Yeni Başlık Ekle
                    </a>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 5%; font-size: 14px !important;">
                                Profil Resmi
                            </th>
                            <th>
                                Yazar
                            </th>
                            <th style="width: 160px;" class="text-center">
                                Durum
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 30%">
                                İşlemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {



                            if (item.Writer.Gender == "K")
                            {
                                genderResult = "avatar2.png";
                            }

                            if (item.Writer.Gender == "E")
                            {
                                genderResult = "avatar5.png";
                            }

                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                badgeResults = "badge badge-info";
                            }

                            if (item.Category.CategoryName == "Yazılım")
                            {
                                badgeResults = "badge badge-danger";
                            }
                            if (item.Category.CategoryName == "Spor")
                            {
                                badgeResults = "badge badge-warning";
                            }

                            if (item.Category.CategoryName == "Film")
                            {
                                badgeResults = "badge badge-secondary";
                            }



                            switch (item.HeadingStatus)
                            {
                                case true:

                                    statusResult = "Aktif";
                                    statusResultNand = "Pasif Yap";
                                    headingStatusClassResults = "btn btn-success";
                                    headingStatusClassResultsNand = "btn btn-secondary";

                                    break;

                                case false:
                                    statusResult = "Pasif";
                                    statusResultNand = "Aktif Yap";
                                    headingStatusClassResults = "btn btn-danger";
                                    headingStatusClassResultsNand = "btn btn-secondary";
                                    break;

                            }




                            <tr>
                                <td>
                                    @item.HeadingId
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @item.HeadingDate.ToString("dd-MMM-yyyy")
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline" style="text-align: center">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/AdminLTE/dist/img/@genderResult">
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    <small>Yazar İçerik Kota</small>
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-valuenow="57" aria-valuemin="0" aria-valuemax="100" style="width: @item.Writer.Headings.Count%;">
                                        </div>
                                    </div>
                                    <a>
                                        @item.Writer.WriterName @item.Writer.WriterSurName
                                    </a>
                                </td>

                                <td>

                                  
                                    <div class="btn-group btn-group-toggle" data-toggle="buttons" style="padding: 0.75rem 0.75rem;">
                                        <a class="@headingStatusClassResults" style="border-top-left-radius: 10px !important;border-bottom-left-radius: 10px;">
                                            <input type="radio" name="options" id="@item.HeadingId" autocomplete="off" checked=""> @statusResult
                                        </a>
                                        <a class="@headingStatusClassResultsNand" href="/Headings/DeleteHeading/@item.HeadingId" style="border-top-right-radius: 10px;border-bottom-right-radius: 10px; width: 90px;">
                                            <input type="radio" name="options" id="@item.HeadingId" autocomplete="off"> @statusResultNand
                                        </a>

                                    </div>





                                </td>



                                <td class="project-state">
                                    <span class="@badgeResults">@item.Category.CategoryName</span>
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" style="border-radius: 8.2rem !important;" href="~/Contents/ContentByHeading/@item.HeadingId">

                                        <i class="fas fa-folder">
                                        </i>
                                        İçerik Bilgisi
                                    </a>
                                    <a class="btn btn-info btn-sm" style="border-radius: 8.2rem !important;" href="~/Headings/EditHeading/@item.HeadingId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" style="border-radius: 8.2rem !important;" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
<!-- jQuery -->
<!-- Bootstrap 4 -->
<script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
