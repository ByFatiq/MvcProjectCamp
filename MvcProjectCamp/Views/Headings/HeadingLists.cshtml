@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "HeadingList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div> <h2 class="card bg-gradient-info" style="margin: auto ;text-align: center;border: 1px solid #ddd; border-radius: 4px; padding: 3px; width: 300px;">Başlıklar Listesi </h2></div>

<br />

<table style="width: 90.0%; margin-left: 50px;border: 1px solid #ddd; border-radius: 4px; padding: 3px;" class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th style="text-align: center; ">Sil</th>
            <th style="text-align: center; ">Güncelle</th>
            <th style="text-align: center; ">Başlıklar</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <th>@item.HeadingId</th>
                <td>@item.HeadingName</td>
                <td>@item.HeadingDate</td>
                <td style="text-align: center; "><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td style="text-align: center; "><a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
                <td style="text-align: center; "><a href="#" class="btn btn-info">Başlığa ait Kategoriler</a></td>
            </tr>
        </tbody>
    }
</table>

<div style="text-align: center;"><a href="/AdminCategory/AddCategory" class="btn btn-primary">Yeni Başlık Ekle</a></div>
