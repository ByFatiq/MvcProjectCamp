@model EntityLayer.Concrete.Heading


@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card card-primary">


    <div class="card-header">
        <h3 class="card-title" style="float: none !important; text-align: center;">Başlık Ekleme Sayfası</h3>
    </div>






    @using (Html.BeginForm("AddHeading", "Headings", FormMethod.Post))
    {
        <div class="form-group" style="padding: 50px;">
            @Html.Label("Başlık Adı:")
            @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
            <br />

            @Html.Label("Başlık Tarihi:")
            @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.HeadingDate, "", new { @class = "text-danger" })
            <br />


            <button class="btn btn-success" style="margin-left: 450px;"> Başlık Ekle</button>

        </div>


    }
</div>