@using CaptchaMvc.HtmlHelpers

@{


    ViewBag.Title = "Inbox";
    Layout = null;
   
  

}





<head>
<title>Yazar Giriş Sayfası</title>

    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
    <link rel="stylesheet" href="~/AdminLTE/pages/writerlogin/css/style.css">



</head>


<body>

    <section class="ftco-section" style="padding: 2em 0 !important; background-image: url("/AdminLTE/pages/writerlogin/loginbg.jpg");" >
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Yazar Giriş Ekranı</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5" style="box-shadow: 0px 0px 30px 1px rgb(204, 204, 204);">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Hesabınız için giriş yapın.</h3>
                            </div>

                        </div>
                        @using (Html.BeginForm("WriterLogin", "Login", FormMethod.Post))
                        {
                            <div class="form-group validate-input">
                                <div class="icon d-flex align-items-center justify-content-center" style="border-radius: 25px 0 24px 25px; background: #3473c3;"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control rounded-left" style="border-radius: 25px 8px 8px 26px !important"  required=""  name="WriterMail" placeholder="Mail Adresinizi girin" required>
                            </div>
                            <div class="form-group validate-input">
                                <div class="icon d-flex align-items-center justify-content-center" style="border-radius: 25px 0 24px 25px; background: #3473c3;"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control rounded-left" style="border-radius: 25px 8px 8px 26px !important"  required=""  name="WriterPassword" placeholder="Şifreniz" required>
                            </div>
                          
                   
                            <div style="margin-left:20%; font-size:13px;">  @Html.Captcha("Kodu Yenile","Lütfen Resimdeki Karakterleri girin.",3,"Zorunlu Alan",true) 
                    
                                <p>
                                    @ViewBag.ErrorMessage
                                </p>
                   
                 
                            </div>
                     

                                <span class="info-box-number text-center text-muted mb-0">
                                    <div class="form-group d-flex ">                              
                                        <div style="float:left; margin-left:10%">
                                           
                                        </div>
                                    </div>
                                </span>
                   

                                <div class="form-group d-flex align-items-center">
                                    <div class="w-100">
                                        <label class="checkbox-wrap checkbox-primary mb-0" style="color: #3473c3;">Beni hatırla
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        
                                        
                                         
                                        </label>
                                    </div>
                                    <div class="w-100 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary rounded submit" style="border-radius: 25px !important; background: #3473c3 !important; border: 1px solid #3473c3 !important;">Giriş</button>


                                    </div>
                                </div>
                                <div class="form-group mt-4">
                                    <div class="w-100 text-center">
                                        <p class="mb-1">Hesabınız yok mu?<a href="#" style="color: #3473c3;margin-left:3px">  Üye olmak için tıklayın...</a></p>
                                        <p></p>

                                        <p><a href="#" style="color: #3473c3;">Şifremi Unuttum!</a></p>
                                    </div>
                                    <div class="w-100">
                                        <p class="social-media d-flex justify-content-end">
                                            <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                            <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                        </p>
                                    </div>
                                </div>
                       
                        }
                    </div>

                </div>
            </div>
            </div>
          
        
    </section>

<script src="~/AdminLTE/pages/writerlogin/js/jquery.min.js"></script>
<script src="~/AdminLTE/pages/writerlogin/js/popper.js"></script>
<script src="~/AdminLTE/pages/writerlogin/js/bootstrap.min.js"></script>
<script src="~/AdminLTE/pages/writerlogin/js/main.js"></script>
</body>

